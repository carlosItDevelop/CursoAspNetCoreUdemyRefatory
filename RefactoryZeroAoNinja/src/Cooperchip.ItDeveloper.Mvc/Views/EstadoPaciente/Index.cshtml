@using Cooperchip.ItDeveloper.Domain.Entities;
@model IEnumerable<EstadoPaciente>

@{
    ViewData ["Title"] = "Lista de Estado dos Pacintes";
}


<partial name="PartialViews/_cabecalho" />

<div class="panel panel-info panel-controls">
    <div class="panel panel-heading">
        <h3>Lista de Estado dos Pacintes</h3>
    </div>

    <div class="panel panel-body">

        <p>
            <a class="btn btn-info" asp-controller="EstadoPaciente" asp-action="Create"><i class="fa fa-plus-circle"></i>&nbsp;&nbsp; Adicionar</a>
        </p>

        <div class="row col-12">


        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Descrição</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
               @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Descricao</td>
                        <td>
                            <a asp-asp-controller="EstadoPaciente" class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                            <a asp-asp-controller="EstadoPaciente" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a asp-asp-controller="EstadoPaciente" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Descrição</th>
                    <th>Ação</th>
                </tr>
            </tfoot>
        </table>

        </div>


    </div>   
</div>

<div class="row">
    <a asp-asp-controller="EstadoPaciente" class="btn btn-default" asp-action="Index">Voltar para a Lista</a>
</div>
