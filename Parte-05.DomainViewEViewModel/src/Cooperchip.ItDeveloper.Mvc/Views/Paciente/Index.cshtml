<div class="row">
    <div class="panel panel-body">
        <div class="col-md-12">

                <div class="row">
                    <div class="panel panel-success">
                        <div class="panel panel-heading">
                            <h3>Lista de Paciente</h3>
                        </div>
                    </div>
                    <hr />
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Id do Paciente</th>
                                <th>Tipo de Telefone</th>
                                <th>Número</th>
                                <th>Ação</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Nome</td>
                                    <td>@item.Cpf</td>
                                    <td>
                                        <a class="btn btn-default" asp-route-id="@item.Nome" asp-controller="Paciente" title="Detalhes de Paciente" asp-action="DetalhesDePaciente" >Detalhes de Pacinte</a>
                                    <a class="btn btn-info" href="javascript:vpoid();" title="Editar Paciente">Editar Paciente</a>
                                    <a class="btn btn-danger" href="javascript:vpoid();" title="Excluir Paciente">Excluir Paciente</a>
                                </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

        </div>
    </div>



</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="/bundle/dataTables.min.js"></script>

}

